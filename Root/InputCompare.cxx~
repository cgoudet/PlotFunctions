#include <iostream>
#include "SideFunctions/InputCompare.h"
#include <ifstream>

using std::ifstream;

InputCompare::InputCompare()
{}

//##################################
InputCompare( string fileName ) 
{

  po::options_description configOptions("configOptions");
  configOptions.add_options()
    ( "rootFileName", po::value< vector< string > >( &m_rootFileName )->multitoken(), "" )
    ( "objName", po::value< vector< string > >( &m_objName )->multitoken(), "" )
    ( "legend", po::value< vector< string > >( &m_legend )->multitoken(), "" )
    ( "legendPos", po::value< vector< double > >( &m_legendPos ), "" )
    ;
  
  po::variables_map vm;
  ifstream ifs( configFile, ifstream::in );
  po::store(po::parse_config_file(ifs, configOptions), vm);
  po::notify( vm );

}
